<?xml version="1.0" encoding="utf-8"?>
<schemalist gettext-domain="simple-message">
    <schema id="org.gnome.shell.extensions.simple-message" path="/org/gnome/shell/extensions/simple-message/">
        <key name="panel-alignment" type="i">
            <default>2</default>
            <summary>Panel box</summary>
            <description>Which panel box (left, center, right) the message is part of</description>
        </key>
        <key name="panel-position" type="i">
            <default>0</default>
            <summary>Panel box position</summary>
            <description>Index of the message within a panel box</description>
        </key>
        <key name="message" type="s">
            <default>"Hello World!"</default>
            <summary>Message</summary>
            <description>String defined by the user to be displayed</description>
        </key>
        <key name="command" type="s">
            <default>""</default>
            <summary>Command</summary>
            <description>Command to launch on click</description>
        </key>
    </schema>
</schemalist>
